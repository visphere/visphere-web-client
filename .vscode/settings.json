{
  "workbench.colorCustomizations": {
    "activityBar.background": "#5a2323",
    "titleBar.activeBackground": "#5a2323",
    "titleBar.inactiveBackground": "#5a2323"
  },
  "prettier.configPath": "./.prettierrc.js",
  "editor.detectIndentation": false,
  "editor.mouseWheelZoom": true,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "workbench.tree.indent": 20,
  "workbench.iconTheme": "vsc-jetbrains-icons-enhanced",
  "workbench.preferredDarkColorTheme": "One Dark Pro Monokai Darker",
  "files.insertFinalNewline": true,
  "psi-header.variables": [
    ["msph_projectName", "moonsphere"],
    ["msph_moduleName", "moonsphere-web-client"]
  ],
  "psi-header.config": {
    "forceToTop": true,
    "blankLinesAfter": 1
  },
  "psi-header.changes-tracking": {
    "isActive": true,
    "autoHeader": "autoSave",
    "include": ["javascript", "typescript", "scss", "html"],
    "includeGlob": ["**/*.sh"],
    "exclude": ["json", "jsonl", "jsonc"],
    "excludeGlob": [".husky/**/*"],
    "enforceHeader": true,
    "replace": ["File name", "Last modified"]
  },
  "psi-header.lang-config": [
    {
      "language": "javascript",
      "begin": "/*",
      "lineLength": 64,
      "afterHeader": ["'use scrict';"]
    },
    {
      "language": "shellscript",
      "begin": "#",
      "prefix": "# ",
      "end": "#",
      "beforeHeader": ["#!/bin/bash", ""],
      "lineLength": 64
    },
    {
      "language": "html",
      "begin": "<!--",
      "prefix": " ~ ",
      "end": " -->",
      "lineLength": 64
    },
    {
      "language": "*",
      "begin": "/*",
      "lineLength": 64
    }
  ],
  "psi-header.templates": [
    {
      "language": "*",
      "template": [
        "Copyright (c) <<year>> by MILOSZ GILGA <https://miloszgilga.pl>",
        "Silesian University of Technology",
        "",
        "  File name: <<filename>>",
        "  Created at: <<filecreated('YYYY-MM-DD, HH:mm:ss')>>",
        "  Last updated at: <<dateformat('YYYY-MM-DD, HH:mm:ss')>>",
        "",
        "  Project name: <<msph_projectName>>",
        "  Module name: <<msph_moduleName>>",
        "",
        "This project is a part of \"MoonSphere\" instant messenger system. This system is a part of",
        "completing an engineers degree in computer science at Silesian University of Technology.",
        "",
        "Licensed under the Apache License, Version 2.0 (the \"License\"); you may not use this",
        "file except in compliance with the License. You may obtain a copy of the License at",
        "",
        "  <http://www.apache.org/license/LICENSE-2.0>",
        "",
        "Unless required by applicable law or agreed to in writing, software distributed under",
        "the License is distributed on an \"AS IS\" BASIS, WITHOUT WARRANTIES OR CONDITIONS",
        "OF ANY KIND, either express or implied. See the License for the specific language",
        "governing permissions and limitations under the license."
      ]
    }
  ]
}
