{
  "workbench.colorCustomizations": {
    "activityBar.background": "#5a2323",
    "titleBar.activeBackground": "#5a2323",
    "titleBar.inactiveBackground": "#5a2323"
  },
  "prettier.configPath": "./.prettierrc.js",
  "editor.rulers": [120],
  "editor.detectIndentation": false,
  "editor.mouseWheelZoom": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "workbench.tree.indent": 20,
  "workbench.iconTheme": "vsc-jetbrains-icons-enhanced",
  "files.insertFinalNewline": true,
  "psi-header.config": {
    "forceToTop": true,
    "blankLinesAfter": 1
  },
  "psi-header.changes-tracking": {
    "isActive": true,
    "autoHeader": "autoSave",
    "include": ["javascript", "typescript", "scss", "html"],
    "includeGlob": ["**/*.sh"],
    "exclude": ["json", "jsonl", "jsonc", "ejs"],
    "excludeGlob": [".husky/**/*", ".vscode/**/*", "./**/*.ejs", "./.htaccess"],
    "enforceHeader": true
  },
  "psi-header.lang-config": [
    {
      "language": "javascript",
      "begin": "/*",
      "lineLength": 64,
      "beforeHeader": ["'use strict';"]
    },
    {
      "language": "shellscript",
      "begin": "#",
      "prefix": "# ",
      "end": "#",
      "beforeHeader": ["#!/bin/sh", ""],
      "lineLength": 64
    },
    {
      "language": "html",
      "begin": "<!--",
      "prefix": " ~ ",
      "end": " -->",
      "lineLength": 64
    },
    {
      "language": "*",
      "begin": "/*",
      "prefix": " * ",
      "end": " */",
      "lineLength": 64
    }
  ],
  "psi-header.templates": [
    {
      "language": "*",
      "template": [
        "Copyright (c) <<year>> by Visphere & Vsph Technologies",
        "Originally developed by Mi≈Çosz Gilga <https://miloszgilga.pl>"
      ]
    }
  ]
}
